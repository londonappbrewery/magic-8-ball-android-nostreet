<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06FBF4"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:background="#AB85E8"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">

        <TextView
            android:id="@+id/text_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/decision_easier"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="396dp"
        android:layout_height="336dp"
        android:layout_marginTop="189dp"
        >

        <ImageView
            android:id="@+id/ballImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ball1"
            android:contentDescription="@string/eight_ball" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="162dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        >

        <Button
            android:id="@+id/button_ask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#255BFA"
            android:text="@string/button"
            android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>
